<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="380dp"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:background="@color/lowPink"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/close"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:textColor="@color/lightGray"
        android:text= "Close"
        android:textSize="35px"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_gravity="end"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/requester"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/requesterImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
></ImageView>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/requesterProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Requester Name"
            android:textSize="30sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <TextView
        android:id="@+id/requesterBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="@color/lightGray"
        android:textSize="18sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/requesterPreferences"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        >
    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>